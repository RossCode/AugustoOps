DB_HOST=localhost
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_NAME=your_database_name
DB_PORT=3306
PORT=5001

# Database Connection Method
# Set to 'true' to use SSH tunnel, 'false' for direct connection
USE_SSH_TUNNEL=false

# SSH Tunnel Configuration (only needed if USE_SSH_TUNNEL=true)
SSH_HOST=your.ssh.host.com
SSH_USER=your_ssh_user
SSH_PRIVATE_KEY_PATH=/path/to/your/ssh/private/key.txt
SSH_PRIVATE_KEY_PASSPHRASE=your_ssh_key_passphrase

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5001/api/auth/google/callback

# Session and JWT Configuration
# IMPORTANT: Generate secure random strings for production
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=generate-a-secure-random-string-here
JWT_SECRET=generate-another-secure-random-string-here
JWT_EXPIRES_IN=7d

# Email Domain Restriction
ALLOWED_EMAIL_DOMAIN=augustodigital.com